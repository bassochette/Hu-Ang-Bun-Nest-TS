{
  "name": "huangbunests",
  "module": "index.ts",
  "type": "module",
  "author": "Webeleon <julien@webeleon.dev>",
  "description": "Proof of concept NestJS X Angular X Bun",
  "private": true,
  "scripts": {
    "api": "bun run --inspect --watch api/bootstrap.ts",
    "build:api-client": "rm -rf dist && bun run api/open-api.ts && bun run openapi-generator-cli generate -i ./openapi.json -g typescript-rxjs -o ./generated-api-client",
    "dev": "concurrently \"bun run api\" \"bun run webapp\"",
    "webapp": "bun run ng serve",
    "webapp:build": "bun run ng build",
    "webapp:test": "bun run ng test"
  },
  "devDependencies": {
    "@angular/animations": "^19.2.0",
    "@angular/common": "^19.2.0",
    "@angular/compiler": "^19.2.0",
    "@angular/core": "^19.2.0",
    "@angular/forms": "^19.2.0",
    "@angular/http": "^7.2.16",
    "@angular/platform-browser": "^19.2.0",
    "@angular/platform-browser-dynamic": "^19.2.0",
    "@angular/router": "^19.2.0",
    "@openapitools/openapi-generator-cli": "^2.18.4",
    "@types/bun": "latest",
    "@types/compression": "^1.7.5",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.0",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "rxjs": "~7.8.0",
    "tailwindcss": "^4.0.15",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@angular-devkit/build-angular": "^19.2.0",
    "@angular/cli": "^19.2.0",
    "@angular/compiler-cli": "^19.2.0",
    "@nestjs/cli": "^11.0.5",
    "@nestjs/common": "^11.0.11",
    "@nestjs/core": "^11.0.11",
    "@nestjs/platform-express": "^11.0.11",
    "@nestjs/swagger": "^11.0.6",
    "@tailwindcss/postcss": "^4.0.15",
    "@types/jasmine": "~5.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "compression": "^1.8.0",
    "helmet": "^8.1.0",
    "jasmine-core": "~5.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "reflect-metadata": "^0.2.2"
  }
}